<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F115A"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher_profile" />

        <LinearLayout
            android:weightSum="2.5"
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:id="@+id/loginUsernameandPasswordid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/LoginUsername"
                android:textColor="#FAF3F3"
                android:textColorHighlight="#F4F0F0"
                android:textColorHint="#F6EEEE"
                android:textColorLink="#F6EBEB"
                android:textSize="16sp" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/username_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="text"
                android:minHeight="48dp"
                android:hint="@string/Username"
                android:textColor="@color/white"
                android:textColorHighlight="#F6F6F6"
                android:textColorHint="#F1EFEF"
                android:textColorLink="@color/white"
                android:textCursorDrawable="@color/white"
                android:textSize="14sp" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/password_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPassword"
                android:hint="@string/password_id_id"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHighlight="#F6F6F6"
                android:textColorHint="#F1EFEF"
                android:textColorLink="@color/white"
                android:textCursorDrawable="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_weight="1"
                android:id="@+id/button_loginid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/purple_700"
                android:text="@string/cmdSecondActivity"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:iconTint="@color/white"
                tools:ignore="TextContrastCheck" />

            <Button
                android:layout_weight="1"
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/purple_700"
                android:gravity="center"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:iconTint="@color/white"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>